<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".activity.InforOrderActivity">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Người mua"
        android:gravity="center"
        android:textSize="25dp"
        android:background="@drawable/button_bg"
        android:textColor="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <ImageView
            android:src="@drawable/baseline_person_24"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imgBuyer"/>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nameBuyer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên : "
                android:layout_marginTop="10dp"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/phoneBuyer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SĐT : "
                android:layout_marginTop="10dp"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/emailBuyer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email : "
                android:layout_marginTop="10dp"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Người Bán"
        android:gravity="center"
        android:textSize="25dp"
        android:background="@drawable/button_bg"
        android:textColor="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <ImageView
            android:src="@drawable/baseline_person_24"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imgSeller"/>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nameSeller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên : "
                android:layout_marginTop="10dp"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/phoneSeller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SĐT : "
                android:layout_marginTop="10dp"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/emailSeller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email : "
                android:layout_marginTop="10dp"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đơn hàng"
        android:gravity="center"
        android:textSize="25dp"
        android:background="@drawable/button_bg"
        android:textColor="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:padding="10dp">
        <ImageView
            android:src="@drawable/baseline_person_24"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imgOrder"/>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nameOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên : "
                android:layout_marginTop="10dp"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/quantityOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số lượng : "
                android:layout_marginTop="10dp"
                android:textSize="20dp"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Màu sắc : "
                    android:textSize="20dp"/>
                <ImageView
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/colorOrder"
                    android:background="#ff00"/>
            </LinearLayout>
            <TextView
                android:id="@+id/totalOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thành tiền : "
                android:layout_marginTop="10dp"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xong"
        android:background="@drawable/orange_btn"
        android:id="@+id/btn_done"
        android:layout_marginTop="20dp"/>


</LinearLayout>